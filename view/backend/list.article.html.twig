{% extends 'template.back.html.twig' %}

{% block title %}{{ parent() }} | Administration des articles{% endblock %}

{% block hero_title %}Liste des articles{% endblock %}
{% block hero_text %}{% endblock %}

{% block main %}
    {# on compte le nombre d'article #}
    {% set nbArticles = articles|length %}
    {# si on en a au mois 1 #}
    {% if nbArticles !=0 %}
    {# si plus qu'1 #}
    {% if nbArticles > 1 %}
        {# création d'une variable pour le pluriel #}
        {% set pluriel = 's' %}
    {% else %}
        {% set pluriel = '' %}
    {% endif %}
    <!-- Header Section -->
    <div class="bg-success text-white py-4">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="h2 mb-0">
                        <i class="bi bi-kanban me-2"></i>Gestion des Articles
                    </h1>
                    <p class="mb-0 opacity-75">Administrez et gérez tous vos articles</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="{{ racineURL }}admin/article/add" class="btn btn-light btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Créer un Article
                    </a>
                </div>
            </div>
        </div>
    </div>

<div class="container-fluid py-4">
    <!-- Stats et actions -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-success text-white rounded-3 p-3 me-3">
                            <i class="bi bi-journal-text fs-4"></i>
                        </div>
                        <div>
                            <h4 class="mb-1">{{ nbArticles }} Article{{ pluriel }}</h4>
                            <p class="text-muted mb-0">Total des articles publiés</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">Actions Rapides</h5>
                    <a href="{{ racineURL }}admin/" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-plus me-1"></i>Retour à l'administation
                    </a>
                    <a href="{{ racineURL }}admin/article/add" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-plus me-1"></i>Nouveau
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    {% endblock %}
    {% block aside %}
    <!-- Tableau des articles -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0 text-success">
                <i class="bi bi-table me-2"></i>Liste des Articles
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-success">
                    <tr>
                        <th class="fw-semibold"># ID</th>
                        <th class="fw-semibold">Titre</th>
                        <th class="fw-semibold">Slug</th>
                        <th class="fw-semibold">Contenu</th>
                        <th class="fw-semibold">Date</th>
                        <th class="fw-semibold">Statut</th>
                        <th class="fw-semibold text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {# tant que l'on a des articles #}
                    {% for article in articles %}
                        <tr>
                            <td>
                                <span class="badge bg-light text-success">{{ article.getArticleId }}</span>
                            </td>
                            <td>
                                <div class="fw-semibold text-success">
                                    {{ article.getArticleTitle|raw }}
                                </div>
                            </td>
                            <td>
                                <code class="text-muted">{{ article.getArticleSlug }}</code>
                            </td>
                            <td>
                                <div class="text-truncate" style="max-width: 200px;">
                                    {{ article.getArticleText|raw }}
                                </div>
                            </td>
                            <td>
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-1"></i>
                                    {{ article.getArticleDateCreate|date('d/m/H \à H\\hi') }}</small>
                            </td>
                            <td>
                                {%  if article.getArticleVisibility < 2 %}
                                        <span class="badge bg-warning">
                                            <i class="bi bi-eye me-1"></i>brouillon
                                        </span>
                                {% elseif article.getArticleVisibility == 2 %}
                                    <span class="badge bg-success">
                                            <i class="bi bi-eye me-1"></i>Publié
                                        </span>
                                {% else %}
                                    <span class="badge bg-danger">
                                            <i class="bi bi-eye me-1"></i>Banni
                                        </span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ racineURL }}admin/article/update/{{ article.getArticleId }}"
                                       class="btn btn-outline-primary"
                                       title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-outline-danger"
                                            title="Supprimer"
                                            onclick="confirmerSuppression('{{ article.getArticleSlug }}', {{ article.getArticleId }})">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">
                                <!-- État vide avec style moderne -->
                                <div class="row justify-content-center">
                                    <div class="col-md-8 text-center">
                                        <div class="card border-0 shadow-sm">
                                            <div class="card-body py-5">
                                                <i class="bi bi-file-text display-1 text-muted mb-4"></i>
                                                <h3 class="text-muted mb-3">Aucun article disponible</h3>
                                                <p class="text-muted">Les premiers articles seront bientôt publiés !</p>
                                                <a href="{{ racineURL }}" class="btn btn-primary mt-3">
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirmer la suppression
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer l'article <strong id="articleName"></strong> ?</p>
                    <p class="text-muted small">Cette action est irréversible.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Annuler
                    </button>
                    <a href="#" id="confirmDelete" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Supprimer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}{{ parent() }}
<script>
    function confirmerSuppression(slug, id) {
    document.getElementById('articleName').textContent = slug;
    document.getElementById('confirmDelete').href = '{{ racineURL }}admin/article/delete/' + id;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>
{% endblock %}