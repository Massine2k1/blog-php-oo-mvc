{% extends "template.front.html.twig" %}

{% block title %}{{ parent() }} | Article : {{ article.getArticleTitle }} {% endblock %}
{% block hero_title %}Article : <small>{{ article.getArticleTitle }}</small>{% endblock %}
{% block hero_text %}{% endblock %}
{% block aside %}
    <div>
        <div class="row justify-content-center">
            <div class="col-md-12 text-left">
                <div class="card shadow-sm">
                    <div class="card-body py-5">
                        <h3 class="text-muted mb-3">{{ article.getArticleTitle }}</h3>
                        <div class="d-flex align-items-center justify-content-between">
                            <div>

                                {% for category in article.getCategories() %}
                                    {% if loop.first %} Rubrique : {% endif %}
                                    <span class="badge bg-primary  "><a class="text-white"
                                                                        href="{{ racineURL }}category/{{ category.getCategorySlug()|e }}">
                                {{ category.getCategoryTitle()|e }}</a></span>
                                    {% else %}
                                    Pas de rubrique.
                                {% endfor %}
                            </div>
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1"></i>{{ article.getArticleDatePublish()|date('Y-m-d H:i') }}
                            </small>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <p class="card-text text-muted">
                            {{ article.getArticleText|nl2br }}
                        </p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-light text-primary">
                                <i class="bi bi-eye me-1"></i>
                                Publié par <a class="text-primary"
                                              href="{{ racineURL }}user/{{ article.getUser.getUserLogin }}">
                                {% if article.getUser.getUserRealName %} {{ article.getUser.getUserRealName }}
                                {% else %} {{ article.getUser.getUserLogin }}
                                {% endif %}</a></span>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Espace commentaires #}
    <div class="row justify-content-center mt-5">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Espace commentaires</h4>

                    {# Affichage des commentaires existants #}
                    {% if article.getComments() is not empty %}
                        {% for comment in article.getComments() %}
                            <div class="d-flex mb-4">
                                <div class="flex-shrink-0">
                                    <i class="bi bi-person-circle fs-2 text-muted"></i>
                                </div>
                                <div class="ms-3">
                                    <div class="fw-bold">{{ comment.user.getUserLogin() }}</div>
                                    <p class="text-muted small mb-1">{{ comment.getCommentCreate()|date('d/m/Y à H:i') }}</p>
                                    <p class="mb-0">{{ comment.getCommentText()|nl2br }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p class="text-muted">Il n'y a pas encore de commentaires. Soyez le premier à en écrire un !</p>
                    {% endif %}

                    <hr class="my-4">

                    {# Si on est connecté, Formulaire pour ajouter un commentaire #}
                    {% if session.user_id %}
                        <h5>Laissez votre commentaire</h5>
                        <form method="POST" action="{{ racineURL }}comment/{{ article.getArticleId() }}/{{ article.getArticleSlug() }}">
                            <div class="mb-3">
                                <label for="comment" class="form-label visually-hidden">Votre commentaire</label>
                                <textarea class="form-control" id="comment" name="comment" rows="4" placeholder="Écrivez votre commentaire ici..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Envoyer le commentaire</button>
                        </form>
                    {% else %}
                        <p class="text-center">Vous devez être <a href="{{ racineURL }}connection">connecté</a> pour laisser un commentaire.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}