{% extends "template.front.html.twig" %}

{% block title %}{{ parent() }} | Article : {{ article.getArticleTitle }} {% endblock %}
{% block hero_title %}Article : <small>{{ article.getArticleTitle }}</small>{% endblock %}
{% block hero_text %}{% endblock %}
{% block aside %}
    <div>
        <div class="row justify-content-center">
            <div class="col-md-12 text-left">
                <div class="card border-0 shadow-sm">
                    <div class="card-body py-5">
                        <h3 class="text-muted mb-3">{{ article.getArticleTitle }}</h3>
                        <div class="d-flex align-items-center justify-content-between">
                            <div>

                                {% for category in article.getCategories() %}
                                    {% if loop.first %} Rubrique : {% endif %}
                                    <span class="badge bg-primary  "><a class="text-white"
                                                                        href="{{ racineURL }}category/{{ category.getCategorySlug()|e }}">
                                {{ category.getCategoryTitle()|e }}</a></span>
                                    {% else %}
                                    Pas de rubrique.
                                {% endfor %}
                            </div>
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1"></i>{{ article.getArticleDatePublish()|date('Y-m-d H:i') }}
                            </small>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <p class="card-text text-muted">
                            {{ article.getArticleText|nl2br }}
                        </p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-light text-primary">
                                <i class="bi bi-eye me-1"></i>
                                Publi√© par <a class="text-primary"
                                              href="{{ racineURL }}user/{{ article.getUser.getUserLogin }}">
                                {% if article.getUser.getUserRealName %} {{ article.getUser.getUserRealName }}
                                {% else %} {{ article.getUser.getUserLogin }}
                                {% endif %}</a></span>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}